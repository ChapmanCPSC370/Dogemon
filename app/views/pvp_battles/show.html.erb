<p id="notice"><%= notice %></p>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/animate.css/3.1.1/animate.min.css">
<div class="row"><center><%= @pvp_battle.whose_turn %> | Current Regen: 10  | <%= link_to 'Restore Health', pvp_battle_restore_health_path(@pvp_battle) %> | <%= link_to 'Force Regen', pvp_battle_apply_regen_path(@pvp_battle, amount: 10.0) %></center><br>
  <div class="col-md-6">
    <center><h3><%= @pvp_battle.user.dogetag %></h3>
      <%= render partial: "pets/pet_overview", locals: { pet: @pvp_battle.pet1 } %>    </center>

        <% @pvp_battle.pet1.equipments.each do |f| %>
        <%= render partial: "items/item_battle_view", locals: { item: f.sale, equipment: f } %>
        <% end %>

  </div>
  <div class="col-md-6">
    
    <center><h3><%= @pvp_battle.other.dogetag %></h3>
       <%= render partial: "pets/pet_overview", locals: { pet: @pvp_battle.pet2 } %>    </center>
