<p id="notice"><%= notice %></p>
<h1><i class="fa fa-shopping-cart"></i> Marketplace | <%= link_to "Workshop", votable_items_path %></h1>
<div class="navbar -default">
<ul class="nav navbar-nav">
  <li><%= link_to "All", items_path %></li>
  <li><%= link_to "Music", items_path %></li>
  <li><%= link_to "Art", items_path %></li>
  <li><%= link_to "Weapons", items_path %></li>
  <li><%= link_to "Top Downloaded", items_path %></li>
  <li><%= link_to "Factory", votable_items_path %></li>
  
</ul>
<ul class="nav navbar-nav navbar-right">
  <li><%= link_to items_path do %><i class="fa fa-list"></i> <% end %></li>
  <li><%= link_to items_grid_path do %><i class="fa fa-th"></i> <% end %></li>
  
</ul>
</div><hr>
<% @items.each do |item| %>
<h4>
  <%= link_to item_upvote_path(item, id: item.id), class: 'pull-right' do %><span class="label label-default">
  <%= item.market_item_votes.count %> <i class="fa fa-caret-up"> </i> Upvote
  </span>
  <% end %>
  <%= image_tag(item.imageurl, width: "60px") %>
  <%= link_to item, class: "btn btn-lg btn-default" do %>
  <span class="l-default"><strong><%= item.name %>: </strong><%= item.worth %></span>

  <% end %>
  </h4>
<% end %>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Worth</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= link_to image_tag(item.imageurl, width: "50px"), item %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.worth %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

