<!DOCTYPE html>
<html>
<head>
  <title>ProjectDoge</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
   <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
</head>

  <body>
    
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class: "navbar-brand" do %>
            <!--<i class="fa fa-bitcoin"></i> <strong>ProjectDoge</strong> v0.01 -->
          <div class="img-"><%= image_tag("projectdoge.png", style: "margin: 0", :class => "img-") %></div>
          <% end %>
        </div>
        <div class="collapse navbar-collapse">  
        <% if user_signed_in? %>
          <ul class="nav navbar-nav">
            <li> <%= link_to "Profile", current_user %>
            </li>
            <li>
              <%= link_to "Market", items_grid_path %></li>
            <li>
              <%= link_to "Friends", users_path %></li><li>
            <%= link_to pvp_battles_path do %>Battles <span class="badge"><%= PvpBattle.count %></span> <% end %>
            </li><li> <%= link_to wallet_path do %>Wallet<% end %>
            </li>
			<li>
            <h2 class="balance"><span class="label label-primary">
              Balance: <%= @blockio["data"]["available_balance"].to_i %> 
              </span>
            </h2>
            </li>
          </ul>
        
<% else %>
    <ul class="nav navbar-nav">
    <li>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-default" %></li><li><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default" %>
      </li>
    </ul>
   <% end %>
   </div>
    </div>
    </div>
    </div>
  <div class="container">
<%= yield %>
<hr>
    <center>&copy; ProjectDoge, 2014 <br>
      <%= link_to "How to Play", how_to_play_path %> | <%= link_to "About", about_path %> | <%= link_to "Contact", "https://twitter.com/JamesSteininger" %><br><br>
</body>
</html>
