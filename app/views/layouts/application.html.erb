<!DOCTYPE html>
<html>
<head>
  <title>ProjectDoge</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

  <body>
    
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to root_path, class: "navbar-brand" do %>
            <!--<i class="fa fa-bitcoin"></i> <strong>ProjectDoge</strong> v0.01 -->
          <%= image_tag "projectdoge.png" %>
          <% end %>
        </div>
        <div class="collapse navbar-collapse">  
        <% if user_signed_in? %>
          <ul class="nav navbar-nav">
            <li> <%= link_to "Profile", current_user %>
            </li>
            <li>
    <%= link_to "Market", items_path %></li><li>
    <%= link_to "Colosseum", colusseums_path %></li><li>
            <%= link_to "Guild", users_path %></li><li>
    <%= link_to "World Map", towns_path %>
            </li><li> <%= link_to wallet_path do %>Wallet<% end %>
            </li>
            <li>
              <% link_to "Add Coin", user_add_coin_path(current_user, amount: 50.0, user_id: current_user.id)  %>
            </li>
          </ul>
        
<% else %>
    <ul class="nav navbar-nav">
    <li>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-default" %></li><li><%= link_to "Sign Up", new_user_registration_path, class: "btn btn-default" %>
      </li>
    </ul>
   <% end %>
   </div>
    </div>
    </div>
    </div>
  <div class="container">
<%= yield %>

</body>
</html>
