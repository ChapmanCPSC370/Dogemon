<h1>Listing enemies</h1>

<table>
  <thead>
    <tr>
      <th>Health</th>
      <th>Attack</th>
      <th>Defense</th>
      <th>Element</th>
      <th>Coin</th>
      <th>Experience</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enemies.each do |enemy| %>
      <tr><%= image_tag(enemy.imageurl) %><br>
        <td><%= enemy.health %></td>
        <td><%= enemy.attack %></td>
        <td><%= enemy.defense %></td>
        <td><%= enemy.element %></td>
        <td><%= enemy.coin %></td>
        <td><%= enemy.experience %></td>
        <td><%= enemy.name %></td>
        <td><%= enemy.description %></td>
        <td><%= link_to 'Show', enemy %></td>
        <td><%= link_to 'Edit', edit_enemy_path(enemy) %></td>
        <td><%= link_to 'Destroy', enemy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Enemy', new_enemy_path %>
