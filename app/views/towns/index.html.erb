
<%= current_user.town_id %>

<div class="row">
  <h1>Listing towns</h1>
  <% @towns.each do |town| %>
  <div class="col-md-4">
    <%= image_tag(town.image_url, class: 'img-responsive') %><br>
    <h3><%= town.name %></h3>
    <p><%= town.description %></p>
    <p><%= link_to 'Travel Here', user_set_town_path(current_user, town_id: town.id), class: 'btn btn-primary' %></p>
    <p><%= link_to 'Show', town %> | 
      <%= link_to 'Edit', edit_town_path(town) %> | 
      <%= link_to 'Destroy', town, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
  <% end %>
</div>
<br>
<%= link_to 'New Town', new_town_path %>
