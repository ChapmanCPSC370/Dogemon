<p id="notice"><%= notice %></p>
<h1><%= image_tag @user.imageurl %> <%= @user.dogetag %></h1><%= link_to "Edit Profile", edit_user_registration_path(@user) %>
<%= @user.email %> | 
Coin: <%= @user.coin %><br>
<strong>Location:</strong> <% if @user.town_id.presence %><%= Town.find(@user.town_id).name %><% end %> | 

<%= link_to "Set Town 1", user_set_town_path(@user, town_id: 1) %> | 

<%= form_for (@user), url: user_set_town_path(@user), method: :post do |f| %>
<%= f.collection_select :town_id, Town.all, :id, :name %>
<%= f.hidden_field :town_id, value: 5 %>
<%= f.submit %>
<% end %>

<h2>My Inventory</h2>
<% @sales.each do |f| %>
<p>
  <% if Item.exists?(id: f.item_id) %>
    <%= link_to image_tag(Item.find(f.item_id).imageurl, width: "50px"), Item.find(f.item_id) %>
    <%= link_to Item.find(f.item_id).name, Item.find(f.item_id) %> | 
<%= link_to "X", sale_path(f, user_id: @user.id), method: :delete, data: { confirm: 'Are you sure?' }  %>
  <% end %>
</p>
<% end %>

<h2>My Log</h2>

<%= form_for [@user, Log.new], url: {controller: :logs, user_id: @user.id } do |f| %>
<%= f.hidden_field :user_id %>
<%= f.label :content %>
<%= f.text_area :content %>
<%= f.submit %>
<% end %>
<% @user.logs.each do |f| %>
<p><strong><%= time_ago_in_words(f.created_at) %></strong> <%= f.content %></p>
<% end %>