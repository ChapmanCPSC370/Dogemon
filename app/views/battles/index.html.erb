<h1>Listing battles</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Enemy</th>
      
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @battles.each do |battle| %>
      <tr>
        <td><%= battle.user.dogetag %></td>
        <td><%= Enemy.find(battle.enemy_id).name %></td>
        <td><%= link_to 'Show', battle %></td>
        <td><%= link_to 'Edit', edit_battle_path(battle) %></td>
        <td><%= link_to 'Destroy', battle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Battle', new_battle_path %>
